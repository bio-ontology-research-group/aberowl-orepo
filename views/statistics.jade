extends layout

block title
  title AberOWL: Statistics
  meta(name='title', content='AberOWL help pages')
  meta(name='description', content='AberOWL API documentation and help pages')
  link(rel='stylesheet', href='/css/base.css')
  link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
  link(rel='stylesheet', href='/css/style.css')

block append scripts
  script(src='/js/jquery-2.1.3.min.js')

block content
  .container-fluid
    .starter-template

      h1 AberOWL Statistics
      h2.sub-header AberOWL Ontology Statistics
      .table-responsive
        table.table.table-striped
          tbody
            tr
              td Number of axioms
              td #{stats.aCount}
            tr
              td Number of classes
              td #{stats.cCount}
            tr
              td Number of ontologies
              td #{stats.oCount}
            tr
              td Number of labels
              td #{stats.lCount}
            tr
              td Number of definitions
              td #{stats.dCount}
            tr
              td Number of missing files 
              td #{stats.noFileError}
            tr
              td Number unsuccessful imports
              td #{stats.importError}
            tr
              td Incoherent ontologies
              td #{stats.parseError}
            tr
              td Ontologies with other errors
              td #{stats.otherError}
